<h1><%= I18n.t('bank.index.title') %></h1>
<%= link_to I18n.t('actions.new', model: Bank.model_name.human), new_bank_path %>

<table class="mt-2 mb-2">
  <thead>
    <tr>
      <th><%= Bank.human_attribute_name :name %></th>
      <th><%= I18n.t('actions.title') %></th>
    </tr>
  </thead>
  <tbody>
    <% if @banks.empty? %>
      <tr>
        <td><%= I18n.t('bank.index.not_found') %></td>
      </tr>
    <% end %>

    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td>
          <%= link_to I18n.t('actions.show'), bank %>
          <%= link_to I18n.t('actions.edit'), edit_bank_path(bank) %>
          <%= link_to I18n.t('actions.destroy'), bank, data: { "turbo-method": :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @providers %>
