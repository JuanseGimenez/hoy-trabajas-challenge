<h1><%= I18n.t('provider.index.title') %></h1>
<%= link_to I18n.t('actions.new', model: Provider.model_name.human), new_provider_path %>
<br>
<table>
  <thead>
    <tr>
      <th><%= Provider.human_attribute_name :name %></th>
      <th><%= Provider.human_attribute_name :contact_name %></th>
      <th><%= Provider.human_attribute_name :contact_phone %></th>
      <th><%= Bank.model_name.human %></th>
      <th><%= BankAccount.human_attribute_name :number %></th>
      <th><%= I18n.t('actions.title') %></th>
    </tr>
  </thead>
  <tbody>
    <% if @providers.empty? %>
      <tr>
        <td><%= I18n.t('provider.index.not_found') %></td>
      </tr>
    <% end %>

    <% @providers.each do |provider| %>
      <tr>
        <td><%= link_to provider.name, provider %></td>
        <td><%= provider.contact_name %></td>
        <td><%= provider.contact_phone %></td>
        <td><%= provider.bank_account.bank.name %></td>
        <td><%= provider.bank_account.number %></td>
        <td>
          <%= link_to I18n.t('actions.edit'), edit_provider_path(provider) %>
          <%= link_to I18n.t('actions.destroy'), provider, data: { "turbo-method": :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @providers %>
